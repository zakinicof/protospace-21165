<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @title %>
      </p>
      <%# ユーザー詳細画面へ遷移させたい %>
      <%= link_to "by#{@prototype.user.name}", user_path(@prototype.user_id), method: :get, class: :prototype__user %>
      <%# プロトタイプの投稿者とログインしているユーザーが同じであれば以下を表示する %>
      <% if user_signed_in? && current_user.id == @prototype.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_prototype_path, method: :get, class: :prototype__btn %>
          <%= link_to "削除する", prototype_path, method: :delete, class: :prototype__btn %>
        </div>
      <% end %> 
      <%# // プロトタイプの投稿者とログインしているユーザーが同じであれば上記を表示する %>
      <div class="prototype__image">
        <%= image_tag @prototype.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">キャッチコピー</p>
          <p class="detail__message">
            <%= @prototype.catch_copy %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">コンセプト</p>
          <p class="detail__message">
            <%= @prototype.concept %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
        <% if user_signed_in? %>
          <%# comments#createを呼び出し %>
          <%# modelの記述が無かったので足してみた %>
          <%= form_with model: @comment, url: comments_path, method: :post, local: true do |f| %>

            <div class="field">
              <%= f.label :text , "コメント" %><br />
              <%= f.text_field :text %>
            </div>
            <%= f.hidden_field :prototype_id, :value => @prototype.id %><br />
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %>
        <% end %>
        <%# // ログインしているユーザーには上記を表示する %>
        <% if user_signed_in? %>
          <ul class="comments_lists">
            <%# 投稿に紐づくコメントを一覧する処理を記述する %>
            <% if @comments %>
              <% @comments.each do |comment| %>
                <li class="comments_list">
                  <%= comment.text %>
                  <%= link_to comment.user.name, "/users/#{current_user.id}", method: :get, class: :comment_user %>
                </li>
              <% end %>
            <% end %>
            <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</main>